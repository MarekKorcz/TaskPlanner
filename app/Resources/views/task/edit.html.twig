{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    
    <h1>Edit Task</h1>
    <div>
        {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-warning" 
                   style="display: inline; float: left; font-weight: bold;">
        {{ form_end(delete_form) }}
        <a href="{{ path('task_index') }}">
            <button class="btn btn-primary" style="float: left;">
                <strong>Back to the list</strong>
            </button>
        </a><br><br>
    </div>
    
    <div class="form">
    {{ form_start(edit_form) }}
        <div class="form">
            {{ form_label(edit_form.name, 'Name:') }}<br>
            {{ form_widget(edit_form.name) }}
        </div>
        <div class="form">
            {{ form_label(edit_form.description, 'Description:') }}<br>
            {{ form_widget(edit_form.description) }}
        </div>
        <div class="form">
            {{ form_label(edit_form.date, 'Date:') }}<br>
            {{ form_widget(edit_form.date) }}
        </div>
        <div class="form">
            {{ form_label(edit_form.deadline, 'Deadline:') }}<br>
            {{ form_widget(edit_form.deadline) }}
        </div>
        <div class="form">
            {{ form_label(edit_form.priority, 'Priority:') }}<br>
            {{ form_widget(edit_form.priority) }}
        </div>
        <div class="form">
            {{ form_label(edit_form.attach, 'Image:') }}<br>
            {{ form_widget(edit_form.attach) }}
        </div>
        <div class="form">
            {{ form_label(edit_form.category, 'Category:') }}<br>
            {{ form_widget(edit_form.category) }}
        </div>
        <div class="form" style="margin-top: 5px">
            <input type="submit" value="Edit" />
        </div>
    {{ form_end(edit_form) }}
    </div>

</div>
{% endblock %}
